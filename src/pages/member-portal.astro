<style>
	.member-portal {
		padding: 6rem 0;
		background: #f8f9fa;
		min-height: 100vh;
	}

	.portal-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.portal-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.portal-header h1 {
		font-size: 2.5rem;
		color: #2c3e50;
		margin-bottom: 1rem;
	}

	.portal-header p {
		font-size: 1.2rem;
		color: #666;
	}

	.portal-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-bottom: 4rem;
	}

	.service-integration-notice {
		background: #e8f4f8;
		padding: 2rem;
		border-radius: 15px;
		border: 1px solid #4a90e2;
		margin-bottom: 2rem;
	}

	.service-integration-notice h3 {
		color: #2c3e50;
		margin-bottom: 1rem;
	}

	.service-integration-notice p {
		color: #4a90e2;
		margin-bottom: 1.5rem;
		font-weight: bold;
	}

	.integration-options {
		display: grid;
		gap: 1.5rem;
	}

	.integration-option {
		background: white;
		padding: 1.5rem;
		border-radius: 10px;
		border: 1px solid #4a90e2;
	}

	.integration-option h4 {
		color: #2c3e50;
		margin-bottom: 1rem;
	}

	.integration-option ul {
		list-style: none;
		color: #666;
	}

	.integration-option li {
		margin-bottom: 0.5rem;
		padding-left: 1rem;
		position: relative;
	}

	.integration-option li::before {
		content: '‚Ä¢';
		position: absolute;
		left: 0;
		color: #4a90e2;
	}

	.placeholder-login {
		background: white;
		padding: 2rem;
		border-radius: 15px;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
	}

	.placeholder-login h3 {
		color: #2c3e50;
		margin-bottom: 1.5rem;
		text-align: center;
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	.form-group label {
		display: block;
		margin-bottom: 0.5rem;
		color: #2c3e50;
		font-weight: bold;
	}

	.form-group input {
		width: 100%;
		padding: 0.8rem;
		border: 1px solid #ddd;
		border-radius: 5px;
		font-size: 1rem;
	}

	.login-btn {
		width: 100%;
		background: #6c757d;
		color: white;
		padding: 1rem;
		border: none;
		border-radius: 5px;
		font-size: 1rem;
		font-weight: bold;
		cursor: not-allowed;
		opacity: 0.6;
		margin-bottom: 1rem;
	}

	.login-links {
		text-align: center;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.login-links a {
		color: #4a90e2;
		text-decoration: none;
		font-size: 0.9rem;
	}

	.login-links a:hover {
		text-decoration: underline;
	}

	.features-preview h3 {
		color: #2c3e50;
		margin-bottom: 2rem;
		text-align: center;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.5rem;
	}

	.feature-card {
		background: white;
		padding: 1.5rem;
		border-radius: 10px;
		text-align: center;
		box-shadow: 0 3px 10px rgba(0,0,0,0.1);
		transition: transform 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-5px);
	}

	.feature-icon {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.feature-card h4 {
		color: #2c3e50;
		margin-bottom: 0.5rem;
		font-size: 1rem;
	}

	.feature-card p {
		color: #666;
		font-size: 0.9rem;
		line-height: 1.5;
	}

	.membership-benefits {
		background: white;
		padding: 3rem;
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0,0,0,0.1);
	}

	.membership-benefits h3 {
		color: #2c3e50;
		margin-bottom: 2rem;
		text-align: center;
		font-size: 1.8rem;
	}

	.benefits-comparison {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.benefit-tier {
		background: #f8f9fa;
		padding: 2rem;
		border-radius: 15px;
		border: 2px solid #e9ecef;
	}

	.benefit-tier.premium {
		border-color: #ffd700;
		background: #fffbf0;
	}

	.benefit-tier h4 {
		color: #2c3e50;
		margin-bottom: 1rem;
		text-align: center;
	}

	.benefit-tier ul {
		list-style: none;
	}

	.benefit-tier li {
		margin-bottom: 0.5rem;
		color: #555;
	}

	.upgrade-notice {
		background: #e8f4f8;
		padding: 2rem;
		border-radius: 15px;
		text-align: center;
		border: 1px solid #4a90e2;
	}

	.upgrade-notice h4 {
		color: #2c3e50;
		margin-bottom: 1rem;
	}

	.upgrade-notice p {
		color: #666;
	}

	.upgrade-notice a {
		color: #4a90e2;
		text-decoration: none;
		font-weight: bold;
	}

	.upgrade-notice a:hover {
		text-decoration: underline;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.portal-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.portal-header h1 {
			font-size: 2rem;
		}

		.features-grid {
			grid-template-columns: 1fr;
		}

		.benefits-comparison {
			grid-template-columns: 1fr;
		}

		.integration-options {
			grid-template-columns: 1fr;
		}
	}
</style>